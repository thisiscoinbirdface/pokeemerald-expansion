script Route6_NPC4{
    lockall
    faceplayer

    if (var(VAR_ROUTE6_FISHERMAN) == 2){
        msgbox(format("I've been practicing real hard! What do you think?"))
        release
        msgbox(format("I'm no good, but it's so much fun!"))
    }

    if (var(VAR_ROUTE6_FISHERMAN) == 1){
        msgbox(format("Have you brought a RED FLUTE?"), MSGBOX_YESNO)

        if (var(VAR_RESULT) == 1){

            if (checkitem(ITEM_RED_FLUTE)){
                msgbox(format("Yes, this looks amazing! I can't wait to start playing it."))
                release
                removeitem(ITEM_RED_FLUTE)
                msgbox(format("I suppose I don't need this any more. Here, why don't you take it? You could start a new hobby too!"))
                giveitem(ITEM_GOOD_ROD)
                setvar(VAR_ROUTE6_FISHERMAN, 2)
            } else {
                msgbox(format("No, it looks like you haven't. You can get one in PELLUCA CITY."))
            }
        }
    }

    if (var(VAR_ROUTE6_FISHERMAN) == 0){
        msgbox(format("These waters are too fierce to fish properly...why am I even fishing here? I'm so unfocused these days. Maybe I need a new hobby...I'd like to try music, but I might be no good. What do you think?"), MSGBOX_YESNO)
        if (var(VAR_RESULT) == 1){
            //yes
            msgbox(format("You're right - unless I try, I'll never know! Say, can you help me out? Can you bring me a RED FLUTE so I can start practicing?"), MSGBOX_YESNO){
                if (var(VAR_RESULT) == 1){
                    //Start quest
                    msgbox(format("Thank you so much! I think you can buy them in PELLUCA CITY. I'll be waiting here for you!"))
                    setvar(VAR_ROUTE6_FISHERMAN, 1)
                }
            }
        } else {
            msgbox(format("Yeah...I suppose I'd be no good. Fishing is all I know."))
        }
    }


    releaseall
    end
}


