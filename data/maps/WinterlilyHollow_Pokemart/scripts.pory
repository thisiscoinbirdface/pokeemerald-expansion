mapscripts WinterlilyHollow_Pokemart_MapScripts{}

script WinterlilyHollow_Pokemart_EventScript_Clerk{
    lock
	faceplayer
	message(gText_HowMayIServeYou)
	waitmessage
	pokemart(WinterlilyHollow_Pokemart_Inventory)
	msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
	release
	end
}

mart WinterlilyHollow_Pokemart_Inventory {
    ITEM_SUPER_POTION   
    ITEM_HYPER_POTION
    ITEM_REVIVE 
    ITEM_GREAT_BALL
    ITEM_ULTRA_BALL
    ITEM_FULL_HEAL
    ITEM_SUPER_REPEL
}


