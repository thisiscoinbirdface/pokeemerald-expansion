script GalecrestCity_Pokemart_EventScript_Clerk{
    lock
	faceplayer
	message(gText_HowMayIServeYou)
	waitmessage
	pokemart(GalecrestCity_Pokemart_Inventory)
	msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
	release
	end
}

