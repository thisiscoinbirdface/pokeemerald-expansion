}

script CarabrueTown_EventScript_NPC1{
    if (flag(FLAG_CARABRUE_POLICE)){
        msgbox(format("Looks like the police went away. I hope they got the evidence they needed."), MSGBOX_NPC)
    } else {
        msgbox(format("Psst - {PLAYER}! See those cops over there? They came all the way from Fennilahl Town to investigate the Professor's disappearance. They're blocking access to Route 1 while they investigate."), MSGBOX_NPC)
    }
    end
}

script CarabrueTown_EventScript_NPC2{
    msgbox(format("My Chikorita and I love how cozy Carabrue Town is! That's because it's nestled deep in the southern hills of Cormoria."), MSGBOX_NPC)
    end
}

