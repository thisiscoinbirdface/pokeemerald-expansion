mapscripts CarabrueTown_MapScripts{}

script CarabrueTown_EventScript_PoliceRoadBlock{

    lockall

    if (!flag(FLAG_UNUSED_0x020)) {
        msgbox(format("DETECTIVE: Sorry, this road is temporarily closed. We're investigating Professor Tenebris' disappearance."))
    } else {
        msgbox(format("DETECTIVE: Is this the evidence from the lab? Perfect. Thanks, kid. We'll take it from here.\p...\pDETECTIVE: Hold on - this doesn't look like evidence!"))
        release

        giveitem(ITEM_EXP_SHARE)

        msgbox(format("DETECTIVE: What's the matter with you guys? Can't keep it together without the Professor?"))
        release
        fadescreen(FADE_TO_BLACK)

        removeobject(1)
        removeobject(2) 

        fadescreen(FADE_FROM_BLACK)

        removeitem(ITEM_LAB_WELCOMEPACKAGE)
        setflag(FLAG_CARABRUE_POLICE)
    }

    releaseall

}



script CarabrueTown_Sign_ChampionHouse{
    lockall
    msgbox(format("This house is locked."))
