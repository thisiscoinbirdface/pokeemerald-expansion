//couple (boy)
script WinterlilyHollow_Houses_NPC3{
    msgbox(format("I'm off-duty right now, but I work in the underground power plant.\pWe store the electricity from Viniel's Pok√©mon in these Cell Batteries."), MSGBOX_NPC)
    release
    showmoneybox(0, 0)
    msgbox(format("Do you want one? It'll cost you 200."), MSGBOX_YESNO)
    if (var(VAR_RESULT) == 1){
        hidemoneybox
        giveitem(ITEM_CELL_BATTERY)
        removemoney(200)
        msgbox(format("Come again if you want any!"), MSGBOX_NPC)
    } else {
        hidemoneybox
        msgbox(format("Come again if you want any!"), MSGBOX_NPC)
    }    
    end
}
