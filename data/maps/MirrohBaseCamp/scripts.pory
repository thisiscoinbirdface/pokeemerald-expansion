script MirrohBaseCamp_EventScript_Vendor1{
    lockall
	faceplayer
	message(format("Our supplies are limited but useful to trek up Mt. Mirroh!"))
	waitmessage
	pokemart(MirrohBaseCamp_Vendor1_Inventory)
	msgbox(format("Come again!"), MSGBOX_DEFAULT)
	release
	end
}

