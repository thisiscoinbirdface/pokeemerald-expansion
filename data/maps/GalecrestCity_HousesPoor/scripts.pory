script GalecrestCity_HousesPoor_Jigglypuff{
    lockall
    faceplayer
    playmoncry(SPECIES_JIGGLYPUFF, CRY_MODE_NORMAL)
    release
    delay(30)
    msgbox(format("JIGGLYPUFF is singing happily! Better leave before I fall asleep..."))
    releaseall
}


